<h1>Contact Me</h1>

{{flash}}

<form action="/enquiry" method="post">

  <div class="form-group">
    <label>Name</label>
    <input required type="text" class="form-control" placeholder="Name" name="name">
  </div>

  <div class="form-group">
    <label>Contact</label>
    <input required type="text" class="form-control" placeholder="Email or Phone Number" name="contact" >
    <small class="form-text text-muted">Please submit either your email or contact number so that I can get back to you</small>
  </div>

  <div class="form-group">
    <label>Enquiry</label>
    <textarea required class="form-control" rows="5" name="enquiry"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>
